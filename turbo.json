{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env"],
  "ui": "stream",
  "tasks": {
    "transit": {
      "dependsOn": ["^transit"]
    },
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "SUPABASE_URL",
        "SUPABASE_ACCESS_TOKEN",
        "SUPABASE_SERVICE_ROLE_KEY",
        "NEXT_PUBLIC_POSTHOG_KEY",
        "NEXT_PUBLIC_POSTHOG_HOST",
        "PLUNK_API_KEY",
        "CONTACT_FROM_EMAIL",
        "CONTACT_TO_EMAIL",
        "ARCJET_KEY",
        "INNGEST_SIGNING_KEY",
        "INNGEST_EVENT_KEY"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*", "!tests/**"],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts",
        "storybook-static/**"
      ]
    },
    "check-types": {
      "dependsOn": ["^transit"]
    },
    "test": {},
    "test:e2e": {
      "passThroughEnv": ["PLAYWRIGHT_*"]
    },
    "@tech-companies-portugal/web#test:e2e": {
      "passThroughEnv": ["PLAYWRIGHT_*"],
      "dependsOn": ["build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "clean": {
      "cache": false
    },
    "start": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^transit"]
    },
    "dev": {
      "persistent": true,
      "cache": false,
      "inputs": ["$TURBO_DEFAULT$", ".env*"]
    }
  }
}
